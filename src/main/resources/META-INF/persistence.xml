<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">


    <persistence-unit name="transactions-optional">
        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
        <class>akeefer.model.Aktivitaet</class>
        <class>akeefer.model.User</class>
        <class>akeefer.model.Parent</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="datanucleus.ConnectionURL" value="appengine"/>

            <!--<property name="datanucleus.NontransactionalRead" value="true"/>-->
            <!--<property name="datanucleus.NontransactionalWrite" value="true"/>-->
            <!--<property name="datanucleus.singletonEMFForName" value="true"/>-->

            <property name="datanucleus.appengine.ignorableMetaDataBehavior" value="NONE" />
            <property name="datanucleus.appengine.datastoreEnableXGTransactions" value="true"/>
        </properties>

    </persistence-unit>
    <!--<class>com.suraj.domain.User</class>-->
</persistence>
